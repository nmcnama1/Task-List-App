<p id="notice"><%= notice %></p>

<h1>Help Containers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Authoer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @help_containers.each do |help_container| %>
      <tr>
        <td><%= help_container.name %></td>
        <td><%= help_container.authoer %></td>
        <td><%= link_to 'Show', help_container %></td>
        <td><%= link_to 'Edit', edit_help_container_path(help_container) %></td>
        <td><%= link_to 'Destroy', help_container, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

